{
  "system": "pcengine",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-PCEngine",
        "path": "retroarch/overlay/GameBezels/PCEngine"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-PCEngine",
        "path": "retroarch/overlay/GameBezels/PCEngine",
        "default": "retroarch/overlay/NEC-PC-Engine.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-beetle-pce-fast": {"core_name": "pce", "library_name": "Beetle PCE Fast", "default": true}
  },
  "cheats": "NEC - PC Engine - TurboGrafx 16",
  "bios": {
    "url": "$BIOS_URL/libretro/NEC%20-%20PC%20Engine%20-%20TurboGrafx%2016%20-%20SuperGrafx",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "syscard2u.pce": "{url}/syscard2u.pce",
      "syscard3u.pce": "{url}/syscard3u.pce"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/NEC - PC Engine - TurboGrafx 16"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/NEC - PC Engine - TurboGrafx 16.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/pcengine/.nointro/{machine}.zip",
          "file_identifier": "name"
        }
      },
      "auth": "internetarchive"
    },
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_PCENGINE_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/pce/",
          "download": "$HOME/retrokit/tmp/pcengine/roms.zip",
          "target": "$HOME/retrokit/tmp/pcengine/roms.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/pcengine/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/pcengine/.redump/{machine}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "roms": {
    "priority": [
      "usa"
    ],
    "filters": {
      "flags": [
        "usa"
      ],
      "!flags": [
        "unl"
      ],
      "!keywords": [
        "bios"
      ],
      "!titles": [
        "Beyond Shadowgate",
        "Cosmic Fantasy 2",
        "Dragon Slayer - The Legend of Heroes",
        "Dungeon Explorer II",
        "Dungeon Master - Theron's Quest",
        "Dynastic Hero, The",
        "Fantastic Night Dreams - Cotton",
        "Gate of Thunder + Bonk's Adventure + Bonk's Revenge",
        "It Came from the Desert",
        "J. B. Harold Murder Club",
        "Jack Nicklaus Turbo Golf",
        "John Madden Duo CD Football",
        "Loom",
        "Lords of the Rising Sun",
        "Magical Dinosaur Tour",
        "Might and Magic III - Isles of Terra",
        "Monster Lair",
        "Sherlock Holmes - Consulting Detective",
        "Sherlock Holmes - Consulting Detective - Volume 2",
        "Shape Shifter",
        "SimEarth - The Living Planet",
        "Splash Lake",
        "Valis II",
        "Valis III",
        "Vasteel",
        "Ys Book I & II",
        "Ys III - Wanderers from Ys"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/pcengine"}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine}.zip"}
    }
  }
}

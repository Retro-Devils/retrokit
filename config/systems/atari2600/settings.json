{
  "system": "atari2600",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Atari2600",
        "path": "retroarch/overlay/GameBezels/Atari2600"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-Atari2600",
        "path": "retroarch/overlay/GameBezels/Atari2600",
        "default": "retroarch/overlay/Atari-2600.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper", "mobygames"]
  },
  "emulators": {
    "lr-stella2014": {"core_name": "stella2014", "library_name": "Stella 2014", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Atari - 2600"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Atari - 2600 (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/atari2600/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa"
    ],
    "filters": {
      "flags": [
        "usa",
        "europe"
      ],
      "!flags": [
        "beta",
        "pirate",
        "proto",
        "unl"
      ],
      "!titles": [
        "32 in 1 Game Cartridge",
        "4 Game in One",
        "BASIC Programming",
        "Color Bar Generator",
        "Frog Demo",
        "MagiCard",
        "Morse Code Tutor"
      ]
    },
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/atari2600/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/atari2600",
        "filters": {
          "names": [
            "Asteroids (Japan, USA)",
            "Breakout (Europe)",
            "Breakout ~ Breakaway IV (Japan, USA)",
            "BurgerTime (USA)",
            "California Games (USA)",
            "Centipede (Japan, USA)",
            "Donkey Kong (USA)",
            "Double Dragon (USA)",
            "Frogger (USA)",
            "Ghostbusters (USA)",
            "Jungle Hunt (USA)",
            "Mario Bros. (USA)",
            "Missile Command (USA)",
            "Ms. Pac-Man (USA)",
            "Pac-Man (USA)",
            "Pitfall II - Lost Caverns (USA)",
            "Pitfall! - Pitfall Harry's Jungle Adventure (USA)",
            "Pole Position (USA)",
            "Popeye (USA)",
            "Space Invaders (USA)",
            "Summer Games (USA)",
            "Super Breakout (USA)",
            "Winter Games (USA)",
            "Zaxxon (USA)"
          ]
        }
      }
    ]
  }
}

{
  "system": "atari2600",
  "themes": {
    "bezel": "Atari2600"
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-stella2014": {"core_name": "stella2014", "library_name": "Stella 2014", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Atari - 2600"
        }
      },
      "resources": {
        "dat": {
          "source": "file:///home/pi/retrokit/cache/nointro/Atari - 2600.dat",
          "target": "/home/pi/RetroPie/roms/atari2600/.nointro/roms.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "/home/pi/RetroPie/roms/atari2600/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa"
    ],
    "filters": {
      "flags": [
        "usa",
        "europe"
      ],
      "!flags": [
        "beta",
        "pirate",
        "proto",
        "unl"
      ]
    },
    "files": {
      "machine": {"target": "{dir}/{machine}.zip"}
    },
    "dirs": [
      {"path": "/home/pi/RetroPie/roms/atari2600/-ALL-"},
      {
        "path": "/home/pi/RetroPie/roms/atari2600",
        "filters": {
          "names": [
            "Asteroids (Japan, USA)",
            "Breakout ~ Breakaway IV (Japan, USA)",
            "Centipede (Japan, USA)",
            "Donkey Kong (USA)",
            "Frogger (USA)",
            "Jungle Hunt (USA)",
            "Mario Bros. (USA)",
            "Missile Command (USA)",
            "Ms. Pac-Man (USA)",
            "Pac-Man (USA)",
            "Pitfall II - Lost Caverns (USA)",
            "Pitfall! - Pitfall Harry's Jungle Adventure (USA)",
            "Pole Position (USA)",
            "Space Invaders (USA)",
            "Super Breakout (USA)"
          ]
        }
      }
    ]
  }
}

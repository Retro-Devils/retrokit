{
  "system": "atari2600",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Atari2600",
        "path": "retroarch/overlay/GameBezels/Atari2600"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-Atari2600",
        "path": "retroarch/overlay/GameBezels/Atari2600",
        "default": "retroarch/overlay/Atari-2600.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper", "mobygames"]
  },
  "emulators": {
    "lr-stella2014": {"core_name": "stella2014", "library_name": "Stella 2014", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Atari - 2600"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Atari - 2600 (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/atari2600/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "Europe",
      "Canada"
    ],
    "filters": {
      "flags": [
        "Australia",
        "Canada",
        "Europe",
        "USA"
      ],
      "!flags": [
        "beta",
        "pirate",
        "proto",
        "unl"
      ],
      "!titles": [
        "32 in 1 Game Cartridge",
        "4 Game in One",
        "BASIC Programming",
        "Color Bar Generator",
        "Frog Demo",
        "MagiCard",
        "Morse Code Tutor"
      ],
      "demo": [
        "Double Dragon"
      ]
    },
    "favorites": {
      "titles": [
        "Asteroids",
        "Breakout",
        "BurgerTime",
        "California Games",
        "Centipede",
        "Donkey Kong",
        "Double Dragon",
        "Frogger",
        "Ghostbusters",
        "Jungle Hunt",
        "Mario Bros.",
        "Missile Command",
        "Ms. Pac-Man",
        "Pac-Man",
        "Pitfall II - Lost Caverns",
        "Pitfall! - Pitfall Harry's Jungle Adventure",
        "Pole Position",
        "Popeye",
        "Space Invaders",
        "Summer Games",
        "Super Breakout",
        "Winter Games",
        "Zaxxon"
      ]
    },
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/atari2600/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/atari2600",
        "filters": {"favorites": [true]}
      }
    ]
  }
}

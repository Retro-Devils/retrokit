{
  "system": "dreamcast",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Dreamcast",
        "path": "retroarch/overlay/GameBezels/Dreamcast"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-Dreamcast",
        "path": "retroarch/overlay/GameBezels/Dreamcast",
        "default": "retroarch/overlay/Dreamcast.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "redream": {"default": true},
    "lr-flycast": {"core_name": "flycast", "library_name": "Flycast"}
  },
  "cheats": "Sega - Dreamcast",
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Dreamcast",
    "dir": "$HOME/RetroPie/BIOS/dc",
    "files": {
      "dc_boot.bin": "{url}/dc_boot.bin",
      "dc_flash.bin": "{url}/dc_flash.bin",
      "naomi_boot.bin": "{url}/naomi_boot.bin"
    }
  },
  "romsets": [
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_DREAMCAST_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/dc/",
          "download": "$HOME/retrokit/tmp/dreamcast/roms.zip",
          "target": "$HOME/retrokit/tmp/dreamcast/roms.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/dreamcast/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/dreamcast/.redump/{machine}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "USA",
        "Europe",
        "World"
      ],
      "!flags": [
        "beta",
        "disc",
        "unl"
      ],
      "!keywords": [
        "dreamkey",
        "dreamon",
        "euro edition",
        "magazine",
        "browser"
      ],
      "titles": [
        "18 Wheeler - American Pro Trucker",
        "Confidential Mission",
        "Crazy Taxi",
        "Crazy Taxi 2",
        "Disney-Pixar Toy Story 2 - Buzz Lightyear to the Rescue!",
        "Grand Theft Auto 2",
        "House of the Dead 2, The",
        "Jet Grind Radio",
        "MagForce Racing",
        "Mortal Kombat Gold",
        "NFL Blitz 2001",
        "Pro Pinball Trilogy",
        "Quake III - Arena",
        "Rayman 2 - The Great Escape",
        "Re-Volt",
        "Rippin' Riders",
        "Sega Rally 2",
        "Sonic Adventure",
        "Sonic Adventure 2",
        "South Park Rally",
        "Star Wars - Episode I - Jedi Power Battles",
        "Star Wars - Episode I - Racer",
        "Super Magnetic Neo",
        "Test Drive 6",
        "Test Drive V-Rally",
        "Tony Hawk's Pro Skater",
        "Tony Hawk's Pro Skater 2",
        "Tomb Raider - The Last Revelation",
        "Tomb Raider Chronicles",
        "Typing of the Dead, The",
        "Unreal Tournament",
        "Worms Armageddon"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/dreamcast"}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}

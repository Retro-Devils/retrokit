{
  "system": "dreamcast",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Dreamcast",
        "path": "retroarch/overlay/GameBezels/Dreamcast"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-Dreamcast",
        "path": "retroarch/overlay/GameBezels/Dreamcast",
        "default": "retroarch/overlay/Dreamcast.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "redream": {"default": true},
    "lr-flycast": {"core_name": "flycast", "library_name": "Flycast"}
  },
  "cheats": {
    "name": "Sega - Dreamcast"
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Dreamcast",
    "dir": "$HOME/RetroPie/BIOS/dc",
    "files": {
      "dc_boot.bin": "{url}/dc_boot.bin",
      "dc_flash.bin": "{url}/dc_flash.bin",
      "naomi_boot.bin": "{url}/naomi_boot.bin"
    }
  },
  "romsets": [
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_DREAMCAST_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/dc/",
          "download": "$HOME/retrokit/tmp/dreamcast/roms.zip",
          "target": "$HOME/retrokit/tmp/dreamcast/roms.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/dreamcast/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/dreamcast/.redump/{machine}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "metadata": {
    "parent": {
      "source": "https://github.com/unexpectedpanda/retool/raw/main/clonelists/Sega%20-%20Dreamcast.json",
      "target": "$HOME/retrokit/tmp/dreamcast/clones.json"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/dreamcast.json"
    },
    "emulator": {
      "overrides": {
        "Confidential Mission (USA)": "lr-flycast",
        "Death Crimson 2 (Japan)": "lr-flycast",
        "Death Crimson OX (Japan)": "lr-flycast",
        "Death Crimson OX (USA)": "lr-flycast",
        "Demolition Racer - No Exit (USA)": "lr-flycast",
        "House of the Dead 2, The (Europe) (En,Fr,De,Es)": "lr-flycast",
        "House of the Dead 2, The (Japan)": "lr-flycast",
        "House of the Dead 2, The (USA)": "lr-flycast",
        "Silent Scope (Europe) (En,Fr,De,Es,It)": "lr-flycast",
        "Silent Scope (Japan)": "lr-flycast",
        "Silent Scope (USA)": "lr-flycast",
        "Virtua Cop 2 (Japan)": "lr-flycast"
      }
    }
  },
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "USA",
        "Europe",
        "World"
      ],
      "!flags": [
        "beta",
        "unl"
      ],
      "categories": [
        "Games"
      ],
      "!titles": [
        "Atari Anniversary Edition",
        "Midway's Greatest Arcade Hits - Volume 1",
        "Midway's Greatest Arcade Hits - Volume 2",
        "Namco Museum",
        "Sega Smash Pack - Volume 1"
      ],
      "demo": [
        "Crazy Taxi"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/dreamcast"}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}

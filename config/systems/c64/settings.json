{
  "system": "c64",
  "themes": {
    "bezel": "C64"
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-vice": {"core_name": "vice", "library_name": "VICE x64", "default": true}
  },
  "romsets": [
    {
      "name": "nointro-tapes",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Commodore - 64 \\(Tapes\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file:///home/pi/retrokit/cache/nointro/Commodore - 64 (Tapes).dat",
          "target": "/home/pi/RetroPie/roms/c64/.nointro/roms-tapes.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "/home/pi/RetroPie/roms/c64/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    },
    {
      "name": "nointro-cartridges",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Commodore - 64 \\([0-9-]+\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file:///home/pi/retrokit/cache/nointro/Commodore - 64.dat",
          "target": "/home/pi/RetroPie/roms/c64/.nointro/roms-cartridges.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "/home/pi/RetroPie/roms/c64/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa"
    ],
    "filters": {
      "c64_dreams": [true],
      "flags": [
        "usa",
        "europe"
      ],
      "!flags": [
        "arcade classic pak",
        "program",
        "unl"
      ],
      "!keywords": [
        "bios",
        "strip poker"
      ]
    },
    "dirs": [
      {"path": "/home/pi/RetroPie/roms/c64/-ALL-"},
      {
        "path": "/home/pi/RetroPie/roms/c64",
        "filters": {
          "names": [
            "180 (Europe) (Budget)",
            "Arkanoid (Europe)",
            "Arkanoid - Revenge of Doh (Europe)",
            "California Games (Europe)",
            "Frogger (USA, Europe)",
            "Karateka (Europe)",
            "Leaderboard (Europe)",
            "Paperboy (Europe)",
            "Pitfall! (USA, Europe)",
            "Pitstop (USA, Europe)",
            "Pitstop II (Europe)",
            "Popeye (USA, Europe)",
            "Rampage (Europe) (Ocean)",
            "Summer Games (Europe)",
            "Summer Games II (Europe)",
            "Winter Games (Europe)",
            "World Games (Europe)"
          ]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine}.zip"}
    }
  }
}

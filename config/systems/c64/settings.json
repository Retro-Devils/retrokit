{
  "system": "c64",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-C64",
        "path": "retroarch/overlay/GameBezels/C64"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-C64",
        "path": "retroarch/overlay/GameBezels/C64",
        "default": "retroarch/overlay/Commodore-64.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-vice": {"core_name": "vice", "library_name": "VICE x64", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Commodore - 64 \\(Tapes\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Commodore - 64 (Tapes) (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/c64/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    },
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Commodore - 64 \\([0-9-]+\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Commodore - 64 (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/c64/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "c64_dreams": [true],
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "arcade classic pak",
        "program",
        "unl"
      ],
      "!keywords": [
        "bios"
      ],
      "!titles": [
        "Samantha Fox Strip Poker"
      ],
      "+titles": [
        "Frogger",
        "Pitstop"
      ],
      "demo": [
        "Pitstop"
      ]
    },
    "favorites": {
      "titles": [
        "180",
        "Arkanoid",
        "Arkanoid - Revenge of Doh",
        "Bubble Bobble",
        "California Games",
        "Choplifter!",
        "Double Dragon",
        "Frogger",
        "Ghostbusters",
        "Great Giana Sisters, The",
        "Impossible Mission",
        "Karateka",
        "Jumpman Junior",
        "Last Ninja, The",
        "Leaderboard",
        "Lode Runner",
        "Mario Bros",
        "Paperboy",
        "Pitfall!",
        "Pitfall II - Lost Caverns",
        "Pitstop",
        "Pitstop II",
        "Pole Position",
        "Popeye",
        "Rampage",
        "Summer Games",
        "Summer Games II",
        "Tetris",
        "Winter Games",
        "World Games",
        "Zaxxon"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/c64/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/c64",
        "filters": {"favorites": [true]}
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}

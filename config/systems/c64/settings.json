{
  "system": "c64",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-C64",
        "path": "retroarch/overlay/GameBezels/C64",
        "default": "retroarch/overlay/Commodore-64.png"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-C64",
        "path": "retroarch/overlay/GameBezels/C64"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-vice": {"core_name": "vice", "library_name": "VICE x64", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Commodore - 64 \\(Tapes\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file:///home/pi/retrokit/cache/nointro/Commodore - 64 (Tapes).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "/home/pi/RetroPie/roms/c64/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    },
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Commodore - 64 \\([0-9-]+\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file:///home/pi/retrokit/cache/nointro/Commodore - 64.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "/home/pi/RetroPie/roms/c64/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa"
    ],
    "filters": {
      "c64_dreams": [true],
      "flags": [
        "usa",
        "europe"
      ],
      "!flags": [
        "arcade classic pak",
        "program",
        "unl"
      ],
      "!keywords": [
        "bios",
        "strip poker"
      ]
    },
    "dirs": [
      {"path": "/home/pi/RetroPie/roms/c64/-ALL-"},
      {
        "path": "/home/pi/RetroPie/roms/c64",
        "filters": {
          "names": [
            "180 (Europe) (Budget)",
            "Arkanoid (Europe)",
            "Arkanoid - Revenge of Doh (Europe)",
            "Bubble Bobble (Europe) (Budget)",
            "California Games (Europe)",
            "Choplifter! (USA, Europe)",
            "Double Dragon (USA, Europe) (HES)",
            "Frogger (USA, Europe)",
            "Ghostbusters (USA, Europe)",
            "Great Giana Sisters, The (Europe)",
            "Impossible Mission (Europe)",
            "Karateka (Europe)",
            "Jumpman Junior (USA, Europe)",
            "Last Ninja, The (Europe)",
            "Leaderboard (Europe)",
            "Lode Runner (USA, Europe)",
            "Mario Bros (Europe)",
            "Paperboy (Europe)",
            "Pitfall! (USA, Europe)",
            "Pitfall II - Lost Caverns (USA, Europe)",
            "Pitstop (USA, Europe)",
            "Pitstop II (Europe)",
            "Pole Position (USA, Europe)",
            "Popeye (USA, Europe)",
            "Rampage (Europe) (Ocean)",
            "Summer Games (Europe)",
            "Summer Games II (Europe)",
            "Tetris (Europe)",
            "Winter Games (Europe)",
            "World Games (Europe)",
            "Zaxxon (USA, Europe)"
          ]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine}.zip"}
    }
  }
}

{
  "system": "mastersystem",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-MasterSystem",
        "path": "retroarch/overlay/GameBezels/MasterSystem"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-MasterSystem",
        "path": "retroarch/overlay/GameBezels/MasterSystem",
        "default": "retroarch/overlay/Sega-Master-System.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "cheats": "Sega - Master System - Mark III",
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Master%20System%20-%20Mark%20III",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_E.sms": "{url}/bios_E.sms",
      "bios_J.sms": "{url}/bios_J.sms",
      "bios_U.sms": "{url}/bios_U.sms"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Sega - Master System - Mark III"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Sega - Master System - Mark III.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/mastersystem/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa",
      "world"
    ],
    "filters": {
      "flags": [
        "europe",
        "usa",
        "world"
      ],
      "!flags": [
        "beta",
        "demo",
        "proto"
      ],
      "!keywords": [
        "arcade smash hits",
        "bios"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/mastersystem/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/mastersystem",
        "filters": {
          "names": [
            "Aladdin (Europe, Brazil)",
            "Back to the Future Part II (Europe, Brazil)",
            "Back to the Future Part III (Europe)",
            "Bubble Bobble ~ Dragon Maze (Europe, Brazil)",
            "California Games ~ Jogos de Verao (USA, Europe, Brazil)",
            "California Games II (Europe)",
            "Double Dragon (World)",
            "Ghostbusters (USA, Europe, Brazil)",
            "Lion King, The (Europe, Brazil)",
            "Mortal Kombat (Europe, Brazil)",
            "Mortal Kombat II (Europe, Brazil)",
            "Ms. Pac-Man (Europe, Brazil)",
            "Paperboy (USA, Brazil)",
            "Rambo - First Blood Part II (USA)",
            "Rambo III (USA, Europe, Brazil)",
            "Rampage (USA, Europe, Brazil)",
            "Simpsons, The - Bart vs. the Space Mutants (Europe, Brazil)",
            "Simpsons, The - Bart vs. the World (Europe, Brazil)",
            "Sonic The Hedgehog (USA, Europe, Brazil)",
            "Sonic The Hedgehog 2 (Europe, Brazil)",
            "Summer Games ~ Jogos Olimpicos (Europe, Brazil)",
            "Terminator 2 - Judgment Day (Europe)",
            "Terminator, The (Europe)",
            "Winter Olympics (Europe) (En,Fr,De,Es,It,Pt,Sv,No)"
          ]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
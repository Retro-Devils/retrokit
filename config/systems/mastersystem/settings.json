{
  "system": "mastersystem",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-MasterSystem",
        "path": "retroarch/overlay/GameBezels/MasterSystem"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-MasterSystem",
        "path": "retroarch/overlay/GameBezels/MasterSystem",
        "default": "retroarch/overlay/Sega-Master-System.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "cheats": "Sega - Master System - Mark III",
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Master%20System%20-%20Mark%20III",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_E.sms": "{url}/bios_E.sms",
      "bios_J.sms": "{url}/bios_J.sms",
      "bios_U.sms": "{url}/bios_U.sms"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Sega - Master System - Mark III"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Sega - Master System - Mark III (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/mastersystem/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "beta",
        "demo",
        "proto"
      ],
      "!keywords": [
        "arcade smash hits",
        "bios"
      ],
      "!titles": [
        "Casino Games"
      ],
      "demo": [
        "Sonic The Hedgehog"
      ]
    },
    "favorites": {
      "titles": [
        "Aladdin",
        "Back to the Future Part II",
        "Back to the Future Part III",
        "Bubble Bobble ~ Dragon Maze",
        "California Games ~ Jogos de Verao",
        "California Games II",
        "Double Dragon",
        "Ghostbusters",
        "Lion King, The",
        "Mortal Kombat",
        "Mortal Kombat II",
        "Ms. Pac-Man",
        "Paperboy",
        "Rambo - First Blood Part II",
        "Rambo III",
        "Rampage",
        "Simpsons, The - Bart vs. the Space Mutants",
        "Simpsons, The - Bart vs. the World",
        "Sonic The Hedgehog",
        "Sonic The Hedgehog 2",
        "Summer Games ~ Jogos Olimpicos",
        "Terminator 2 - Judgment Day",
        "Terminator, The",
        "Winter Olympics"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/mastersystem/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/mastersystem",
        "filters": {"favorites": [true]}
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
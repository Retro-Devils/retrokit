{
  "system": "megadrive",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-MegaDrive",
        "path": "retroarch/overlay/GameBezels/Megadrive"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-MegaDrive",
        "path": "retroarch/overlay/GameBezels/Megadrive",
        "default": "retroarch/overlay/Sega-Mega-Drive.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "cheats": "Sega - Mega Drive - Genesis",
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Mega%20Drive%20-%20Genesis",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_MD.bin": "{url}/bios_MD.bin"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Sega - Mega Drive - Genesis"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Sega - Mega Drive - Genesis (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/megadrive/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "aftermarket",
        "alt",
        "beta",
        "compilation",
        "genesis mini",
        "mega drive mini",
        "program",
        "proto",
        "rental version",
        "sega channel",
        "test drive version",
        "unl",
        "virtual console",
        "visitor"
      ],
      "!keywords": [
        "bios",
        "disney collection",
        "mega games",
        "mega drive play tv",
        "teenage mutant hero"
      ],
      "!titles": [
        "6-Pak",
        "Fun 'n Games",
        "Math Blaster - Episode 1",
        "Mega 6 Vol. 3"
      ],
      "demo": [
        "Mortal Kombat"
      ]
    },
    "favorites": {
      "titles": [
        "Adventures of Batman & Robin, The",
        "After Burner II",
        "Aladdin",
        "Back to the Future Part III",
        "Batman Forever",
        "Batman Returns",
        "Batman - Revenge of the Joker",
        "Batman - The Video Game",
        "California Games",
        "Championship Pro-Am",
        "Double Dragon 3 - The Arcade Game",
        "Double Dragon V - The Shadow Falls",
        "Double Dribble - The Playoff Edition",
        "Earthworm Jim 2",
        "Earthworm Jim",
        "Ghostbusters",
        "Indiana Jones and the Last Crusade",
        "Judge Dredd",
        "Jurassic Park - Rampage Edition",
        "Jurassic Park",
        "Lethal Enforcers II - Gun Fighters",
        "Lethal Enforcers",
        "Lion King, The",
        "Madden NFL 97",
        "Micro Machines",
        "Mortal Kombat 3",
        "Mortal Kombat II",
        "Mortal Kombat",
        "Ms. Pac-Man",
        "NBA Jam - Tournament Edition",
        "NBA Jam",
        "NHL 97",
        "Paperboy 2",
        "Paperboy",
        "Rambo III",
        "Simpsons, The - Bart's Nightmare",
        "Simpsons, The - Bart vs. the Space Mutants",
        "Sonic The Hedgehog 2",
        "Sonic The Hedgehog 3",
        "Sonic The Hedgehog",
        "Teenage Mutant Ninja Turtles - The Hyperstone Heist",
        "Teenage Mutant Ninja Turtles - Tournament Fighters",
        "Terminator, The",
        "Top Gear 2",
        "Winter Olympic Games",
        "X-Men 2 - Clone Wars",
        "X-Men"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/megadrive/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/megadrive",
        "filters": {"favorites": [true]}
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
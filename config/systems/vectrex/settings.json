{
  "system": "vectrex",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GCEVectrex",
        "path": "retroarch/overlay/GameBezels/GCEVectrex"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-GCEVectrex",
        "path": "retroarch/overlay/GameBezels/GCEVectrex",
        "default": "retroarch/overlay/GCE-Vectrex.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-vecx": {"core_name": "vecx", "library_name": "VecX", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/GCE - Vectrex"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/GCE - Vectrex.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/vectrex/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa",
      "world"
    ],
    "filters": {
      "flags": [
        "europe",
        "usa",
        "world"
      ],
      "!flags": [
        "beta",
        "proto",
        "sample",
        "unl"
      ],
      "!keywords": [
        "3d",
        "bios",
        "stress tester"
      ]
    },
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/vectrex"}
    ]
  }
}

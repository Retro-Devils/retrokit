{
  "system": "segacd",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-SegaCD",
        "path": "retroarch/overlay/GameBezels/SegaCD",
        "default": "retroarch/overlay/Sega-CD.png"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-SegaCD",
        "path": "retroarch/overlay/GameBezels/SegaCD"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "cheats": "Sega - Mega-CD - Sega CD",
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Mega%20CD%20-%20Sega%20CD",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_CD_E.bin": "{url}/bios_CD_E.bin",
      "bios_CD_J.bin": "{url}/bios_CD_J.bin",
      "bios_CD_U.bin": "{url}/bios_CD_U.bin"
    }
  },
  "romsets": [
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_SEGACD_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/mcd/",
          "download": "$HOME/RetroPie/roms/segacd/.redump/roms.zip",
          "target": "$HOME/RetroPie/roms/segacd/.redump/roms.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/segacd/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/segacd/.redump/{machine}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "roms": {
    "filters": {
      "names": [
        "Adventures of Batman and Robin, The (USA)",
        "Batman Returns (USA)",
        "Cliffhanger (USA)",
        "Earthworm Jim - Special Edition (USA) (RE)",
        "Final Fight CD (USA)",
        "Mad Dog II - The Lost Gold (USA)",
        "Mad Dog McCree (USA)",
        "Mortal Kombat (USA)",
        "NBA Jam (USA)",
        "Prince of Persia (USA)",
        "Road Avenger (USA)",
        "Sonic CD (USA)",
        "Star Wars - Rebel Assault (USA)",
        "Terminator, The (USA)",
        "WWF - Rage in the Cage (USA)"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/segacd"}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine}.chd"}
    }
  }
}
{
  "system": "segacd",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-SegaCD",
        "path": "retroarch/overlay/GameBezels/SegaCD"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-SegaCD",
        "path": "retroarch/overlay/GameBezels/SegaCD",
        "default": "retroarch/overlay/Sega-CD.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "cheats": {
    "name": "Sega - Mega-CD - Sega CD"
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Mega%20CD%20-%20Sega%20CD",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_CD_E.bin": "{url}/bios_CD_E.bin",
      "bios_CD_J.bin": "{url}/bios_CD_J.bin",
      "bios_CD_U.bin": "{url}/bios_CD_U.bin"
    }
  },
  "romsets": [
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_SEGACD_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/mcd/",
          "download": "$HOME/retrokit/tmp/segacd/roms.zip",
          "target": "$HOME/retrokit/tmp/segacd/roms.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/segacd/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/segacd/.redump/{machine}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "metadata": {
    "parent": {
      "source": "https://github.com/unexpectedpanda/retool/raw/main/clonelists/Sega%20-%20Mega%20CD%20%26%20Sega%20CD.json",
      "target": "$HOME/retrokit/tmp/segacd/clones.json"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/segacd.json"
    }
  },
  "roms": {
    "priority": [
      "USA",
      "Europe"
    ],
    "filters": {
      "flags": [
        "Australia",
        "Europe",
        "USA"
      ],
      "!flags": [
        "Beta",
        "Demo",
        "Proto",
        "Unl"
      ],
      "!keywords": [
        "Sampler"
      ],
      "categories": [
        "Games"
      ],
      "!titles": [
        "# Collections",
        "Sega Classics Arcade Collection",
        "Sega Classics Arcade Collection - Limited Edition",
        "# Board Games",
        "Software Toolworks' Star Wars Chess, The",
        "# Trivia",
        "NFL Football Trivia Challenge"
      ],
      "demo": [
        "WWF - Rage in the Cage"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/segacd"}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
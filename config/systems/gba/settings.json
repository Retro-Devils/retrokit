{
  "system": "gba",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GBA",
        "path": "retroarch/overlay/GameBezels/GBA"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-GBA",
        "path": "retroarch/overlay/GameBezels/GBA",
        "default": "retroarch/overlay/Nintendo-Game-Boy-Advance.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"]
  },
  "emulators": {
    "lr-mgba": {"core_name": "mgba", "library_name": "mGBA", "default": true}
  },
  "cheats": {
    "name": "Nintendo - Game Boy Advance"
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo%20-%20Game%20Boy%20Advance",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "gba_bios.bin": "{url}/gba_bios.bin"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Nintendo - Game Boy Advance \\([0-9]"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Nintendo - Game Boy Advance (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gba/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "alt",
        "beta",
        "demo",
        "ja",
        "program",
        "proto",
        "unl"
      ],
      "!keywords": [
        "2 disney games",
        "2 game",
        "2 great games",
        "2 in 1",
        "2-in-1",
        "3 game",
        "4 game",
        "4-in-1",

{
  "system": "pc",
  "scraper": {
    "sources": ["screenscraper"],
    "args": ["--excludefiles", "*DOSBox*"]
  },
  "emulators": {
    "dosbox": {"default": true}
  },
  "romsets": [
    {
      "name": "the_eye",
      "protocol": "http",
      "url": "$ROMSET_PC_EXODOS_URL/eXoDOS",
      "resources": {
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/pc/.exodos/{machine}.zip",
          "target": "$HOME/RetroPie/roms/pc/.exodos/{machine_sourcefile}",
          "install": {"action": "zip_extract", "include_parent": false},
          "file_identifier": "name"
        },
        "dat": {
          "source": "file://$HOME/retrokit/cache/exodos/MS-DOS.xml",
          "target": "$HOME/retrokit/tmp/pc/roms.dat",
          "install": {"action": "exodos_to_dat"}
        }
      }
    }
  ],
  "roms": {
    "filters": {
      "titles": [
        "Arkanoid",
        "Arkanoid II - Revenge of Doh",
        "American Gladiators",
        "Bubble Bobble",
        "California Games",
        "California Games II",
        "Death Rally",
        "Disney's Aladdin",
        "Disney's Beauty and the Beast - Be Our Guest",
        "DOOM",
        "Duke Nukem 3D",
        "Duke Nukem 3D - Atomic Edition",
        "Epic Pinball - The Complete Collection",
        "Family Feud",
        "Number Munchers",
        "Oregon Trail Deluxe, The",
        "Oregon Trail, The",
        "Quake",
        "Prince of Persia",
        "Rise of the Triad - Dark War",
        "Sid Meier's Civilization",
        "SimCity",
        "SimCity 2000 - CD Collection",
        "Skate or Die",
        "Star Wars - Rebel Assault",
        "Star Wars - Rebel Assault II - The Hidden Empire",
        "Star Wars X-Wing",
        "Theme Park",
        "Tomb Raider Gold",
        "Where in the World is Carmen Sandiego",
        "Wolfenstein 3D"
      ],
      "!titles": [
        "Carmageddon Max Pack",
        "Descent",
        "Descent II"
      ],
      "demo": [
        "Oregon Trail, The"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/pc", "filters": {}}
    ],
    "files": {
      "conf": {
        "target": "{dir}/{machine}.conf",
        "global_overrides": "$HOME/retrokit/config/systems/pc/dosbox.conf",
        "overrides": "$HOME/retrokit/config/systems/pc/conf/{machine}.conf"
      }
    }
  }
}

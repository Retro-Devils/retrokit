{
  "system": "pc",
  "themes": {},
  "scraper": {
    "sources": ["screenscraper"],
    "args": "--excludefiles *DOSBox*"
  },
  "emulators": {
    "dosbox": {"proper_name": "Dosbox", "coreopt": "dosbox", "default": true},
    "dosbox-staging": {"proper_name": "DosboxStaging", "build": "source", "coreopt": "dosbox"}
  },
  "romsets": [
    {
      "name": "the_eye",
      "protocol": "http",
      "url": "$ROMSET_PC_EXODOS_URL/eXoDOS",
      "resources": {
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "/home/pi/RetroPie/roms/pc/.exodos/{machine}.zip",
          "target": "/home/pi/RetroPie/roms/pc/.exodos/{machine_sourcefile}",
          "install": {"action": "zip_extract", "include_parent": false},
          "file_identifier": "name"
        },
        "dat": {
          "source": "file:///home/pi/retrokit/cache/exodos/MS-DOS.xml",
          "download": "/home/pi/RetroPie/roms/pc/.exodos/roms.xml",
          "target": "/home/pi/RetroPie/roms/pc/.exodos/roms.dat",
          "install": {"action": "exodos_to_dat"}
        }
      },
      "emulator": "dosbox"
    }
  ],
  "roms": {
    "dirs": {
      "all": "/home/pi/RetroPie/roms/pc"
    },
    "files": {
      "conf": {"target": "{dir}/{machine}.conf", "overrides": "/home/pi/retrokit/config/systems/pc/dosbox.conf"}
    },
    "allowlists": {
      "names": [
        "Arkanoid (1988)",
        "Arkanoid II - Revenge of Doh (1989)",
        "American Gladiators (1992)",
        "Bubble Bobble (1988)",
        "California Games (1988)",
        "California Games II (1990)",
        "Death Rally (1996)",
        "Disney's Aladdin (1994)",
        "Disney's Beauty and the Beast - Be Our Guest (1992)",
        "DOOM (1993)",
        "Earthworm Jim (1995)",
        "Earthworm Jim 2 (1996)",
        "Epic Pinball - The Complete Collection (1995)",
        "Family Feud (1987)",
        "Number Munchers (1990)",
        "Oregon Trail Deluxe, The (1992)",
        "Oregon Trail, The (1990)",
        "Prince of Persia (1990)",
        "Rise of the Triad - Dark War (1994)",
        "SimCity (1989)",
        "SimCity 2000 - CD Collection (1994)",
        "Skate or Die (1988)",
        "Star Wars - Rebel Assault (1993)",
        "Star Wars - Rebel Assault II - The Hidden Empire (1995)",
        "Star Wars X-Wing (Collector's CD-ROM) (1994)",
        "Theme Park (1994)",
        "Where in the World is Carmen Sandiego (1985)",
        "Wolfenstein 3D (1992)"
      ]
    },
    "blocklists": {
      "names": [
        "Carmageddon Max Pack (1998)",
        "Descent (1995)",
        "Descent II (1996)",
        "Duke Nukem 3D (1996)",
        "Duke Nukem 3D - Atomic Edition (1996)",
        "Pitfall II - Lost Caverns (1984)",
        "Quake (1996)",
        "Sid Meier's Civilization (1991)",
        "Tomb Raider Gold (1998)"
      ]
    }
  }
}

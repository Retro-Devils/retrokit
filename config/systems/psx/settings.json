{
  "system": "psx",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-PSX",
        "path": "retroarch/overlay/GameBezels/PSX"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-PSX",
        "path": "retroarch/overlay/GameBezels/PSX",
        "default": "retroarch/overlay/Sony-PlayStation.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"],
    "args": [
      "--excludefiles",
      "*Disc 2*,*Disc 3*,*Disc 4*,*Disc 5*"
    ]
  },
  "emulators": {
    "lr-duckstation": {"core_name": "duckstation", "library_name": "DuckStation", "default": true},
    "lr-pcsx-rearmed": {"core_name": "pcsx_rearmed", "library_name": "PCSX-ReARMed"}
  },
  "cheats": "Sony - PlayStation",
  "bios": {
    "url": "$BIOS_URL",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "psxonpsp660.bin": "{url}/Other/Sony%20-%20PlayStation/PSXONPSP660.BIN",
      "scph101.bin": "{url}/libretro/Sony%20-%20PlayStation/scph101.bin",
      "scph7001.bin": "{url}/libretro/Sony%20-%20PlayStation/scph7001.bin",
      "scph5501.bin": "{url}/libretro/Sony%20-%20PlayStation/scph5501.bin",
      "scph1001.bin": "{url}/libretro/Sony%20-%20PlayStation/scph1001.bin"
    }
  },
  "romsets": [
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_PSX_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/psx/",
          "download": "$HOME/retrokit/tmp/psx/roms.zip",
          "target": "$HOME/retrokit/tmp/psx/roms.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}{page_number}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/psx/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/psx/.redump/{machine}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "languages": [
        "English",
        null
      ],
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "unl"
      ],
      "!keywords": [
        "collector",
        "demo",
        "namco",
        "playstation",
        "sampler"
      ],
      "!categories": [
        "Browser",
        "Cards",
        "Chess",
        "Data",
        "Dating",
        "Educational",
        "Gambling",
        "Horse",

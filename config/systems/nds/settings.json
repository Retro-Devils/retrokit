{
  "system": "nds",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-NDS",
        "path": "retroarch/overlay/GameBezels/NDS"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-NDS",
        "path": "retroarch/overlay/GameBezels/NDS",
        "default": "retroarch/overlay/Nintendo-DS.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "drastic": {"default": true}
  },
  "cheats": "Nintendo - Nintendo DS",
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo%20-%20Nintendo%20DS",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios7.bin": "{url}/bios7.bin",
      "bios9.bin": "{url}/bios9.bin",
      "firmware.bin": "{url}/firmware.bin"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "url": "$ROMSET_NDS_NOINTRO_URL",
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Nintendo - Nintendo DS.dat"
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/nds/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa",
      "world"
    ],
    "filters": {
      "flags": [
        "europe",
        "usa",
        "world"
      ],

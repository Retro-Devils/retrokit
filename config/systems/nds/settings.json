{
  "system": "nds",
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "drastic": {"default": true}
  },
  "cheats": {
    "name": "Nintendo - Nintendo DS"
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo%20-%20Nintendo%20DS",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios7.bin": "{url}/bios7.bin",
      "bios9.bin": "{url}/bios9.bin",
      "firmware.bin": "{url}/firmware.bin"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "url": "$ROMSET_NDS_NOINTRO_URL",
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Nintendo - Nintendo DS (Decrypted) (Parent-Clone).dat"
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/nds/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "metadata": {
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/nds.json"
    }
  },
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "Beta",
        "Demo",
        "Kiosk",
        "Proto"
      ],
      "!genres": [
        null,
        "Board game",
        "Casino",
        "Compilation",
        "Educational",
        "Visual Novel",
        "Playing cards"
      ],
      "!keywords": [
        "BIOS",
        "Collection"
      ],
      "+titles": [
        "Mario Party DS"
      ],
      "demo": [
        "Contra 4"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/nds", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}

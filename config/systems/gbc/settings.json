{
  "system": "gbc",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GBC",
        "path": "retroarch/overlay/GameBezels/GBC"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-GBC",
        "path": "retroarch/overlay/GameBezels/GBC",
        "default": "retroarch/overlay/Nintendo-Game-Boy-Color.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"]
  },
  "emulators": {
    "lr-mgba": {"core_name": "mgba", "library_name": "mGBA", "default": true}
  },
  "cheats": "Nintendo - Game Boy Color",
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo%20-%20Gameboy%20Color",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "cgb_boot.bin": "{url}/cgb_boot.bin",
      "gbc_bios.bin": "{url}/gbc_bios.bin"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Nintendo - Game Boy Color"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Nintendo - Game Boy Color (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gbc/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "alt",
        "beta",
        "demo",
        "ja",
        "program",
        "proto",
        "unl"
      ],
      "!keywords": [
        "4-in-1",
        "arcade classic",
        "arcade hits",
        "bios",
        "camera",
        "card",
        "casino",
        "collection",
        "collector",
        "gallery",
        "infogenius",
        "microsoft",
        "teenage mutant hero turtles"
      ],
      "!titles": [
        "Chessmaster"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/gbc/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/gbc",
        "filters": {
          "titles": [
            "Aladdin",
            "Batman Beyond - Return of the Joker",
            "Carmageddon - Carpocalypse Now",
            "Classic Bubble Bobble",
            "Croc 2",
            "Donkey Kong Country",
            "Driver - You are the Wheelman",
            "Duke Nukem",
            "Earthworm Jim - Menace 2 the Galaxy",
            "Frogger",
            "Grand Theft Auto",
            "Grand Theft Auto 2",
            "Harry Potter and the Chamber of Secrets",
            "Harry Potter and the Sorcerer's Stone",
            "Lion King, The - Simba's Mighty Adventure",
            "Little Mermaid II, The - Pinball Frenzy",
            "Mega Man Xtreme",
            "Mega Man Xtreme 2",
            "Mickey's Racing Adventure",
            "Micro Machines V3",
            "Mortal Kombat 4",
            "Paperboy",
            "Rampage - World Tour",
            "Rayman",
            "Rayman 2",
            "Road Rash",
            "Simpsons, The - Night of the Living Treehouse of Horror",
            "Space Invaders",
            "Spider-Man",
            "Star Wars Episode I - Racer",
            "Super Mario Bros. Deluxe",
            "Tomb Raider",
            "Tony Hawk's Skateboarding ~ Tony Hawk's Pro Skater",
            "Tony Hawk's Pro Skater 2",
            "Tony Hawk's Pro Skater 3",
            "Toy Story Racer",
            "Worms Armageddon"
          ]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
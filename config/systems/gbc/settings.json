{
  "system": "gbc",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GBC",
        "path": "retroarch/overlay/GameBezels/GBC"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-GBC",
        "path": "retroarch/overlay/GameBezels/GBC",
        "default": "retroarch/overlay/Nintendo-Game-Boy-Color.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-mgba": {"core_name": "mgba", "library_name": "mGBA", "default": true}
  },
  "cheats": {
    "names": [
      "Nintendo - Game Boy Color"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo%20-%20Gameboy%20Color",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "cgb_boot.bin": "{url}/cgb_boot.bin",
      "gbc_bios.bin": "{url}/gbc_bios.bin"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Nintendo - Game Boy Color"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Nintendo - Game Boy Color (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gbc/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "metadata": {
    "manual": {
      "source": "file://$HOME/retrokit/config/systems/gbc/manuals.tsv"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/gbc.json"
    }
  },
  "roms": {
    "priority": {
      "flags": [
        "USA",
        "World"
      ],
      "length": "ascending"
    },
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "Alt",
        "Beta",
        "Demo",
        "Test Program",
        "Proto",
        "Unl"
      ],
      "!genres": [
        null,
        "Board game",
        "Casino",
        "Compilation",
        "Educational"
      ],
      "!keywords": [
        "4-in-1",
        "BIOS",
        "Card",
        "Casino",
        "Collection",
        "Collector",
        "Teenage Mutant Hero Turtles"
      ],
      "!titles": [
        "Chessmaster"
      ],
      "demo": [
        "Super Mario Bros. Deluxe"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/gbc", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
{
  "system": "ngpc",
  "themes": {
    "bezel": "NGPC"
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"]
  },
  "emulators": {
    "lr-beetle-ngp": {"core_name": "ngp", "library_name": "Beetle NeoPop", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/SNK - Neo Geo Pocket Color"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/SNK - Neo Geo Pocket Color.dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/ngpc/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "usa"
    ],
    "filters": {
      "flags": [
        "europe",
        "usa",
        "world"
      ],
      "!flags": [
        "proto"
      ],
      "!keywords": [
        "pocket casino"
      ],
      "!titles": [
        "Pocket Reversi",
        "Shanghai Mini"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/ngpc"}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}

{
  "system": "gamegear",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GameGear",
        "path": "retroarch/overlay/GameBezels/GameGear"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-GameGear",
        "path": "retroarch/overlay/GameBezels/GameGear",
        "default": "retroarch/overlay/Sega-Game-Gear.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper", "thegamesdb"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "cheats": "Sega - Game Gear",
  "bios": {
    "url": "$BIOS_URL/libretro/Sega%20-%20Game%20Gear",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios.gg": "{url}/bios.gg"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Sega - Game Gear"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Sega - Game Gear (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gamegear/.nointro/{machine}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "priority": [
      "USA",
      "World"
    ],
    "filters": {
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "alt",
        "beta",
        "program",
        "proto",
        "unl"
      ],
      "!keywords": [
        "arcade classics",
        "bios",
        "poker face paul"
      ],
      "!titles": [
        "5 in One FunPak",
        "Casino FunPak",
        "Solitaire FunPak",
        "Solitaire Poker"
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/gamegear/-ALL-"},
      {
        "path": "$HOME/RetroPie/roms/gamegear",
        "filters": {
          "titles": [
            "Aladdin",
            "Ariel the Little Mermaid",
            "Bubble Bobble",
            "Captain America and the Avengers",
            "Double Dragon",
            "Earthworm Jim",
            "Indiana Jones and the Last Crusade",
            "Judge Dredd",
            "Jurassic Park",
            "Lion King, The",
            "Marble Madness",
            "Mega Man",
            "Micro Machines",
            "Ms. Pac-Man",
            "NBA Jam",
            "Pac-Man",
            "Pinball Dreams",
            "R.C. Grand Prix",
            "Simpsons, The - Bartman Meets Radioactive Man",
            "Simpsons, The - Bart vs. the Space Mutants",
            "Sonic The Hedgehog",
            "Sonic The Hedgehog 2",
            "Terminator, The"
          ]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}